#%Module1.0#####################################################################

proc ModulesHelp { } {
        global helpmsg

        puts stderr "\t$helpmsg\n"
}

#
# 2. change 'modhome' to base directory: /usr/fftw, /opt/fftw, ...
#
set     modhome      /share/apps/tools/submit

set moddir /share/apps/tools/submit

if [ file isdirectory $moddir ] {
    module-whatis       "Adds Slurm submission scripts to path"
    set helpmsg "Adds Slurm submission scripts to path"
    # bring in new version

    prepend-path PATH $moddir

} else {
    module-whatis       "Slurm submission scripts not installed"
    set helpmsg "Slurm submission scripts  not installed"
    if [ expr [ module-info mode load ] || [ module-info mode display ] ] {
        # bring in new version
        puts stderr     "Slurm submission scripts not installed on [uname nodename]"
    }
}

